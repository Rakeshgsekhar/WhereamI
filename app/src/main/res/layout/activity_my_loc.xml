<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151414"
    tools:context="com.webatron.rakesh.whereami.MyLoc">

    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/point"
        android:layout_width="100dp"
        android:src="@drawable/localization"
        android:visibility="invisible"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_below="@id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mylocation"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:padding="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get Location"
        android:textColor="#ffffff"
        android:background="#e46852"
        android:id="@+id/getloc"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mylocation"
        />
</RelativeLayout>
